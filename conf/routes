# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /admin                            controllers.Application.indexAdmin

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                     controllers.Assets.at(path="/public", file)

# Categorias
GET     /admin/categorias                 controllers.CategoriaCRUD.lista()
GET     /admin/categoriaJson              controllers.CategoriaCRUD.listaJson()
POST    /admin/novaCategoriaJson          controllers.CategoriaCRUD.novaCategoriaJson()
GET     /admin/categorias/nova            controllers.CategoriaCRUD.novaCategoria()
GET     /admin/categorias/:codigo         controllers.CategoriaCRUD.detalhar(codigo : Long)
POST    /admin/categoria/                 controllers.CategoriaCRUD.gravar()
POST    /admin/categorias/:codigo         controllers.CategoriaCRUD.alterar(codigo: Long)
POST    /admin/categoria/:codigo/remover  controllers.CategoriaCRUD.remover(codigo: Long)

# Fabricantes
GET     /admin/fabricantes                 controllers.FabricanteCRUD.lista()
GET     /admin/fabricantes/novo            controllers.FabricanteCRUD.novoFabricante()
GET     /admin/fabricantes/:codigo           controllers.FabricanteCRUD.detalhar(codigo: Long)
POST    /admin/fabricantes/                controllers.FabricanteCRUD.gravar()
POST    /admin/fabricantes/:codigo           controllers.FabricanteCRUD.alterar(codigo: Long)
POST    /admin/fabricantes/:codigo/remover   controllers.FabricanteCRUD.remover(codigo: Long)

# Produtos
GET     /admin/produtos                      controllers.ProdutoCRUD.lista()
GET     /admin/produtos/novo            controllers.ProdutoCRUD.novoProduto()
GET     /admin/produtos/:codigo           controllers.ProdutoCRUD.detalhar(codigo: Long)
POST    /admin/produtos/                controllers.ProdutoCRUD.gravar()
POST    /admin/produtos/:codigo           controllers.ProdutoCRUD.alterar(codigo: Long)
POST    /admin/produtos/:codigo/remover   controllers.ProdutoCRUD.remover(codigo: Long)